<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Train Ticket Booking</title>

    <!-- Bootstrap CSS & Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: linear-gradient(180deg, #143056, #0d1e36);
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            color: white;
            overflow-y: auto;
            transition: width 0.3s ease;
            z-index: 9999;
        }

            /* Sidebar collapsed */
            .sidebar.collapsed {
                width: 80px !important;
               
            }

                .sidebar.collapsed .nav-link {
                    display: flex;
                    flex-direction: column;
                    align-items: center; /* horizontally center */
                    justify-content: center; /* vertically center */
                    padding-left: 0 !important;
                    padding-right: 0 !important;
                    text-align: center !important;
                }

        /* Navbar collapsed */
        .collapsed-navbar {
            margin-left: 80px !important;
        }

        /* Content collapsed */
        .content-collapsed {
            margin-left: 100px !important;
        }

        .sidebar-menu,
        .sub-menu {
            list-style: none;
            padding-left: 0;
            font-size: 12px;
        }

            .sidebar-menu li > a {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 6px 20px;
                border-radius: 4px;
                font-size: 12px;
                color: white;
                text-decoration: none;
                transition: background 0.3s;
            }

            .sidebar-menu li:hover > a {
                background-color: rgba(255, 255, 255, 0.15);
            }

            .sidebar-menu li,
            .sub-menu li {
                padding: 6px 10px;
                cursor: pointer;
            }

        /* Arrow animation */
        .arrow {
            transition: transform 0.3s;
        }

            .arrow.rotate {
                transform: rotate(90deg);
            }

        /* Sub menu collapse */
        .submenu-collapse {
            display: none;
        }

            .submenu-collapse.show {
                display: block;
            }

        /* Navbar */
        .top-navbar {
            height: 60px;
            background: white;
            border-bottom: 1px solid #ddd;
            display: flex;
            align-items: center;
            padding: 0 20px;
            margin-left: 250px;
            transition: margin-left 0.3s ease;
           
        }

        .menu-toggle-btn {
            font-size: 24px;
            border: none;
            background: none;
            cursor: pointer;
            margin-right: 15px;
            align-items: center;
        }

        .container-main {
            margin-left: 260px;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

        .sidebar-menu a.active {
            background-color: rgba(255, 255, 255, 0.25);
            font-weight: bold;
        }


    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <ul class="sidebar-menu">

            <li><a href="#">DashBoard</a></li>

            <li class="has-sub">
                <a href="javascript:void(0)" data-target="#ED">
                  Trainsetup
                    <i class="bi bi-chevron-right arrow"></i>
                </a>
                <ul class="submenu-collapse sub-menu" id="ED">
                    <li><a href="/TrainSetup/AddTrain">AddTrain</a></li>

                   @*  <li class="has-sub">
                        <a href="javascript:void(0)" data-target="#CSC">
                            CSC যাচাইকৃত আবেদন
                            <i class="bi bi-chevron-right arrow"></i>
                        </a>
                        <ul class="submenu-collapse sub-menu" id="CSC">
                            <li><a href="/NewApplication/CSCApproved">গৃহীত আবেদন</a></li>
                            <li><a href="/NewApplication/NewCSCFail">বাতিল আবেদন</a></li>
                        </ul>
                    </li> *@
                    <li><a href="/TrainSetup/AddStation">AddStation</a></li>
                    <li><a href="/TrainSetup/TrainRoute">TrainRoute</a></li>
                   
                </ul>
            </li>

        </ul>
    </div>

    <!-- Navbar -->
    <div id="navbar" class="top-navbar">
        <button class="menu-toggle-btn" onclick="toggleSidebar()">☰</button>
        <h4 class="m-0">Dashboard Panel</h4>
    </div>

    <!-- Content -->
    <div class="container-main" id="content">
        @RenderBody()
    </div>

    <!-- Script -->
    <script>
        // Submenu toggle
        document.querySelectorAll('[data-target]').forEach(menu => {
            menu.addEventListener("click", function () {

                const target = document.querySelector(this.dataset.target);
                const arrow = this.querySelector(".arrow");

                if (arrow) arrow.classList.toggle("rotate");
                if (target) target.classList.toggle("show");
            });
        });

        // Sidebar toggle
        function toggleSidebar() {
            const sidebar = document.getElementById("sidebar");
            const navbar = document.getElementById("navbar");
            const content = document.getElementById("content");

            sidebar.classList.toggle("collapsed");
            navbar.classList.toggle("collapsed-navbar");
            content.classList.toggle("content-collapsed");
        }
    </script>

</body>
</html>
